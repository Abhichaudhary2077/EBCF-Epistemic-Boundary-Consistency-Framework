{
  "presentation": "chest_pain",
  "scope": "non-diagnostic",
  "description": "Epistemic evaluation of chest pain based on observable symptoms only.",
  "rules": {
    "no_diagnosis": true,
    "no_probabilities": true,
    "allow_unknown": true
  },
  "stages": [
    {
      "stage": "presence_check",
      "questions": [
        {
          "id": "cp_present",
          "text": "Are you currently experiencing chest pain?",
          "type": "boolean",
          "required": true
        }
      ]
    },
    {
      "stage": "symptom_qualification",
      "questions": [
        {
          "id": "pain_quality",
          "text": "How would you describe the pain?",
          "type": "choice",
          "options": ["pressure", "sharp", "burning", "other", "unknown"]
        },
        {
          "id": "pain_location",
          "text": "Where is the pain located?",
          "type": "choice",
          "options": ["center", "left", "right", "diffuse", "unknown"]
        },
        {
          "id": "onset",
          "text": "Did the pain start suddenly?",
          "type": "choice",
          "options": ["yes", "no", "unknown"]
        },
        {
          "id": "duration",
          "text": "How long has the pain lasted?",
          "type": "choice",
          "options": ["minutes", "hours", "days", "unknown"]
        }
      ]
    },
    {
      "stage": "associated_observables",
      "questions": [
        {
          "id": "associated_symptoms",
          "text": "Are any of the following present?",
          "type": "multi_choice",
          "options": [
            "shortness_of_breath",
            "nausea",
            "sweating",
            "dizziness",
            "none"
          ]
        }
      ]
    },
    {
      "stage": "red_flag_check",
      "questions": [
        {
          "id": "red_flags",
          "text": "Are any of these true?",
          "type": "multi_choice",
          "options": [
            "severe_pain",
            "fainting",
            "confusion",
            "radiating_pain",
            "known_heart_disease",
            "none"
          ],
          "hard_stop": true
        }
      ]
    },
    {
      "stage": "missing_information",
      "questions": [
        {
          "id": "available_tests",
          "text": "Do you currently have any of the following?",
          "type": "multi_choice",
          "options": [
            "ecg",
            "blood_tests",
            "blood_pressure",
            "oxygen_levels",
            "none"
          ]
        }
      ]
    }
  ],
  "epistemic_outcomes": {
    "hard_stop": {
      "message": "Do not reason further. Seek urgent medical care."
    },
    "non_identifiable": {
      "message": "Multiple common causes remain indistinguishable with current information. Further reasoning would require guessing."
    },
    "allowed": {
      "message": "Uncertainty has sufficiently collapsed to allow reasoning without guessing."
    }
  }
}
